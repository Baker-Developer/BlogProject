                            <img src="/images/bootstraplogo.png" class="img-fluid" style="height:90px;" />
                            <img src="/images/herokulogoalt.png" class="img-fluid" style="height:90px;" />
                         </div>
                     </div>
                    <div class="mx-auto mt-3" style="width: 100%; max-width: 600px;">
                        <form class="d-flex" asp-action="SearchIndex" asp-controller="Posts">
                            <input class="form-control border-light" type="search" style="padding: 30px;" placeholder="Search Blogs"
                                   aria-label="Search" name="SearchTerm">
                            <button class="btn btn-primary px-3" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>


        <!-- ======= Blog Section ======= -->
        <section id="blog" class="blog">
            <div class="container" data-aos="fade-up">

        
                
                @RenderBody()

            </div>
        </section><!-- End Blog Section -->

    </main><!-- End #main -->
