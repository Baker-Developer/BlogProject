    <!-- End Top Bar -->

    <header id="header" class="header d-flex align-items-center">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                  <img src="/images/bakerblogpencil.png"  alt="">
              @*  <h1>Baker Blog</h1>*@
            </a>
        
            <nav id="navbar" class="navbar">
               
                <ul>

                    <li> <a asp-controller="Home" asp-action="Index" class="nav-link btn btn-link ">Home</a></li>
                    <li>    <a asp-controller="Home" asp-action="Contact" class="nav-link btn btn-link ">Contact</a></li>
                    <li>    <a asp-controller="Home" asp-action="About" class="nav-link btn btn-link ">About</a></li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a asp-controller="Blogs" asp-action="Create" class="nav-link btn btn-link ">Create Blog</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a asp-controller="Posts" asp-action="Create" class="nav-link btn btn-link ">Create Post</a></li>
                    }
                    @if (User.IsInRole("Administrator") || (User.IsInRole("Moderator")))
                    {
                        <li><a asp-controller="Comments" asp-action="Index" class="nav-link btn btn-link ">Delete Comments</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a asp-controller="Posts" asp-action="Index" class="nav-link btn btn-link ">Delete Post</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a asp-controller="Blogs" asp-action="Index" class="nav-link btn btn-link ">Delete Blog</a></li>
                    }

                    <li class="dropdown">
                        <a class="nav-link btn btn-link">
                            <span>Sign In Or Register</span> <i class="bi bi-chevron-down dropdown-indicator"></i>
                        </a>
                        <partial name="_LoginPartial" name="DisplayName" />
                    </li>



                </ul>
            </nav>
            <!-- .navbar -->
            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header>
    <!-- End Header -->

    <main id="main">
   
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="row d-flex">
                <div class="container text-center py-5 ">
                    <h1 class="mb-4 text-white">Benjamin Baker's Blog</h1>  
                    <p class="text-white"> Built Using</p>
                     <div class="col-12">
                         <div class="row d-flex justify-content-center">
                            <img src="/images/csharpalt.png" class="img-fluid" style="height:90px;" />
                            <img src="/images/dotnetmvcalt.png" class="img-fluid" style="height:90px;" />
                            <img src="/images/pgadminlogo.png" class="img-fluid" style="height:90px;" />
